{
  "name": "eth.faucet",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && mv dist/contracts/* dist/ && rmdir dist/contracts",
    "preview": "vite preview",
    "prepare": "ts-patch install -s",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "yarn run typecheck && yarn run eslint src/ --ext .js,.jsx,.ts,.tsx",
    "abi:gen-interface": "for file in public/**/*.json; do npx abi-types-generator $file --output=src/types/ --provider=web3; done",
    "truffle:compile": "(rm -r public/contracts || true) && truffle compile",
    "truffle:migrate": "TMP_CONFIG=/tmp/truffle-config.cjs && cp ./truffle-config.js $TMP_CONFIG && truffle migrate --config $TMP_CONFIG --reset && rm $TMP_CONFIG && yarn run abi:gen-interface",
    "truffle:publish": "npm run truffle:compile && npm run truffle:migrate",
    "test": "jest"
  },
  "dependencies": {
    "@metamask/detect-provider": "^2.0.0",
    "@metamask/providers": "^11.0.0",
    "bulma": "^0.9.4",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web3": "^1.10.0",
    "web3-eth-contract": "^1.10.0"
  },
  "devDependencies": {
    "@depay/web3-mock": "^14.7.0",
    "@testing-library/react": "^14.0.0",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.1.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "@types/jest": "^29.5.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "ethereum-abi-types-generator": "^1.3.2",
    "fetch-mock": "^9.11.0",
    "ts-jest": "^29.1.0",
    "ganache": "^7.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.8",
    "truffle": "^5.9.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "typescript": "^5.0.4",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^4.3.5"
  }
}